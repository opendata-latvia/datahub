.span8
  .well
    %h2
      = link_to @account.login, account_profile_path(@account)
      = "/"
      = @project.name
      %small.pull-right
        = link_to "Edit", edit_account_project_path(@account, @project), :class => "btn btn-small"
        = link_to "Delete", account_project_path(@account, @project), :method => :delete, :class => "btn btn-small btn-danger",
          :confirm => "Are you sure to delete this project with all datasets?"
    - if @project.description.present?
      %p= simple_format @project.description
    - if @project.homepage.present?
      %p= link_to @project.homepage, @project.homepage, :target => "_blank"

.span4
  %h2 Recent Activity