.span6.offset3

  %h2= t("users.sign_up")

  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'well form-horizontal'}) do |f|
    = f.error_notification

    .inputs
      = f.input :login, :autofocus => true, :hint => t("simple_form.hints.login_html")
      = f.input :email, :required => true, :hint => t("simple_form.hints.email_html")
      -if resource.password_required?
        = f.input :password, :required => true
        = f.input :password_confirmation, :required => true

    .controls
      = f.button :submit, t("users.sign_up"), :class => 'btn-primary'

  %h3= t("users.also_sign_up_with")
  = render "devise/omniauth"
