!!!
%html
  %head
    %title data.opendata.lv
    :erb
      <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
      <![endif]-->
    = stylesheet_link_tag "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{data: {toggle: "collapse", target: ".nav-collapse"}}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{href: "/"} data.opendata.lv
          .nav-collapse
            %ul.nav
              %li= link_to "Projects", root_path
              %li= link_to "Data Sets", root_path
            %ul.nav.pull-right
              - if user_signed_in?
                %li= link_to current_user_avatar_and_name, edit_user_registration_path
                %li= link_to "Sign out", destroy_user_session_path, :method => :delete
              - else
                %li= link_to "Sign in", new_user_session_path

    .container
      - flash.each do |name, msg|
        .alert{class: "alert-#{name == :notice ? "success" : "error"}"}
          %a.close{data: {dismiss: "alert"}} &times;
          = msg
      .row
        = yield
