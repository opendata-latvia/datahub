.comment{id: "comment#{comment.id}"}
  .actions
    - if user_signed_in?
      =link_to "Reply", new_comment_path(:comment => {:parent_id => comment.id, :commentable_type => comment.commentable_type, :commentable_id => comment.commentable_id}), :class => "btn btn-mini btn-success", :remote => true
      =comment_delete_action(comment)
  .face
    = gravatar_image_tag(comment.user.email, :gravatar => {:size => 30})
  .created_at{:class => "#{'unread-comment' if current_user && comment.unread?(current_user.last_sign_in_at)}"}
    = link_to comment.user.display_name, account_profile_path(comment.user.login)
    commented
    = distance_of_time_in_words_to_now(comment.created_at)
    ago
  .content.markdown
    = markdown(comment.content)
  .reply{:style => "display:none"}
  